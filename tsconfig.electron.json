{
  "compilerOptions": {
    "outDir": "dist-electron",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/electron/**/*"],
  "exclude": ["dist", "node_modules"]
}
